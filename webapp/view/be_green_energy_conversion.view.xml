<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="sap.ui.demo.nav.TATAPOWER..controller.be_green_energy_conversion" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page>
				<content>
					<core:Fragment fragmentName="sap.ui.demo.nav.view.HeaderMain" type="XML"/>
					<core:Fragment fragmentName="sap.ui.demo.nav.view.HeaderMenu" type="XML"/>
					<html:div class="container-fluid">
						<html:div class="row">
							<html:div class="col-md-3">
								<Tree id="Tree" items="{path: '/'}">
									<CustomTreeItem>
										<FlexBox alignItems="Start" width="100%">
											<items >
												<FlexBox >
													<Link text="{text}" press="handleButtonPress"/>
												</FlexBox>
											</items>
										</FlexBox>
									</CustomTreeItem>
								</Tree>
							</html:div>
							<html:div class="col-md-9">
								<Panel>
									<html:div class="container-fluid">
										<html:div class="go-green_intro">
											<html:div class="intro_head">
												<html:h4>Energy Conversion</html:h4>
											</html:div>
											<html:div class="intro_img">
												<html:image src="images/be_green_banner.png" alt="be_green_banner" class="img-responsive"></html:image>
											</html:div>
											<html:div class="intro_desc">
												<html:h5 class="text-center">Let us follow these simple tips &amp; a power greener world !</html:h5>
											</html:div>
											<html:div class="kitchen">
												<html:div class="green_banner">
													<html:image src="images/kitchen_app.png" alt="kitchen_app" class="img-responsive"></html:image>
												</html:div>
											</html:div>
											<html:div class="kitchen">
												<html:div class="green_banner">
													<html:image src="images/home_app.png" alt="home_app" class="img-responsive"></html:image>
												</html:div>
											</html:div>
											<html:div class="kitchen">
												<html:div class="green_banner">
													<html:image src="images/conserve.png" alt="conserve" class="img-responsive"></html:image>
												</html:div>
											</html:div>
										</html:div>
									</html:div>
								</Panel>
							</html:div>
						</html:div>
					</html:div>
					<core:Fragment fragmentName="sap.ui.demo.nav.view.Footer" type="XML"/>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>